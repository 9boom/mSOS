<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SOSReport" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue_600</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/gray_900</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/gray_900</item>
        <item name="colorSurface">@color/gray_800</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.SOSReport.Button</item>
        <item name="textInputStyle">@style/Widget.SOSReport.TextInputLayout</item>
    </style>
    
    <color name="gray_800">#1F2937</color>
    <color name="gray_300">#D1D5DB</color>
</resources>
