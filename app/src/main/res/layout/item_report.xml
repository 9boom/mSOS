<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#E5E7EB"
    app:strokeWidth="1dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReporterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สมชาย ใจดี"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="10:30 น."
                    android:textColor="#6B7280"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="รอความช่วยเหลือ"
                android:textColor="#991B1B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_status_badge"/>

        </LinearLayout>

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_map_pin"
                    android:tint="#9CA3AF"
                    android:contentDescription="Location Icon"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="พิกัด: 13.7563, 100.5018"
                    android:textColor="#4B5563"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Contact -->
            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="ติดต่อ: 081-234-5678"
                android:textColor="#4B5563"
                android:textSize="14sp"/>

            <!-- Details -->
            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ติดอยู่บนหลังคาบ้าน น้ำท่วมสูง ต้องการความช่วยเหลือด่วน"
                android:textColor="#374151"
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- Relayed Badge (conditional) -->
        <LinearLayout
            android:id="@+id/layoutRelayedBadge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_top_border"
            android:visibility="visible">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_radio"
                android:tint="#D97706"
                android:contentDescription="Radio Icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="ส่งผ่านเครือข่าย Bluetooth/WiFi Direct"
                android:textColor="#92400E"
                android:textSize="12sp"/>

        </LinearLayout>

        <!-- View on Map Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewOnMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ดูบนแผนที่"
            android:textSize="14sp"
            app:backgroundTint="#2563EB"
            app:cornerRadius="8dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>