<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Connection Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#ECFDF5"
        app:strokeColor="#A7F3D0"
        app:strokeWidth="1dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivConnectionIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_wifi"
                android:tint="#047857"
                android:contentDescription="Connection Icon"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvConnectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เชื่อมต่ออินเทอร์เน็ต"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvConnectionDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="รายงาน SOS จะถูกส่งไปยังระบบทันที"
                    android:textColor="#4B5563"
                    android:textSize="14sp"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ทดสอบโหมดออฟไลน์"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="#4B5563"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    
    
    <!-- SOS Button Container -->
    <FrameLayout
        android:id="@+id/sosButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Large SOS Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSosButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#DC2626"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            

            <LinearLayout
                android:id="@+id/btnSendSOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="64dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_alert_circle"
                    android:tint="@android:color/white"
                    android:contentDescription="SOS Icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="ส่งสัญญาณ SOS"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>
    
         <!-- Got Help Button Container -->
    <FrameLayout
        android:id="@+id/gotHelpButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Pan Got Help Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGotHelpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#DC2626"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            

            <LinearLayout
                android:id="@+id/btnSendGotHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/green_600">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ฉันได้รับความช่วยเหลือแล้ว"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textStyle="bold"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- SOS Form (will be shown/hidden) -->
    <include layout="@layout/form_sos_report"
        android:id="@+id/sosFormContainer"
        android:visibility="gone"/>

</LinearLayout>