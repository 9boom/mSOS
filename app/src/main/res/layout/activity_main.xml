<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="1dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivAlertIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_alert_circle"
                    android:tint="#DC2626"
                    android:contentDescription="Alert Icon"/>

                <TextView
                    android:id="@+id/tvAppTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="mSOS Network"
                    android:textSize="20sp"
                    android:textColor="#111827"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivConnectionStatus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_wifi"
                    android:tint="#059669"
                    android:contentDescription="Connection Status"/>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <!-- Mode Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/white">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVictimMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ฉันคือผู้ประสบภัย"
                android:textSize="14sp"
                app:backgroundTint="#DC2626"
                app:cornerRadius="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRescuerMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ฉันคือกู้ภัย"
                android:textSize="14sp"
                app:backgroundTint="#E5E7EB"
                app:strokeColor="#E5E7EB"
                android:textColor="#374151"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Victim Mode Content will be inserted here -->
            <include layout="@layout/content_victim_mode"
                android:id="@+id/victimModeContent"
                android:visibility="visible"/>

            <!-- Rescuer Mode Content will be inserted here -->
            <include layout="@layout/content_rescuer_mode"
                android:id="@+id/rescuerModeContent"
                android:visibility="gone"/>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>